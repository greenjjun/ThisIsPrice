<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fee"
        android:textSize="50sp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/header_card_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드사"
        android:textSize="20sp"
        android:layout_below="@+id/txt_fee"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16sp"
        android:textStyle="bold"
        />

<LinearLayout
    android:id="@+id/box_card_company"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_card_company"
    android:layout_alignParentRight="true"
    android:orientation="horizontal"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/txt_card_company"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_down"/>

</LinearLayout>


    <TextView
        android:id="@+id/header_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="국제 브랜드"
        android:textSize="20sp"
        android:layout_below="@+id/box_card_company"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/box_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_brand"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        >

    <TextView
        android:id="@+id/txt_brand"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"/>

</RelativeLayout>