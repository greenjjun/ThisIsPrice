<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="50sp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/header_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제품 가격"
        android:textSize="20sp"
        android:layout_below="@+id/txt_price"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/header_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배송비"
        android:textSize="20sp"
        android:layout_below="@+id/edit_price"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/edit_shipping"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_shipping"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/header_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배송 지역"
        android:textSize="20sp"
        android:layout_below="@+id/edit_shipping"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16sp"
        android:textStyle="bold"

        />
    <LinearLayout
        android:id="@+id/box_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/header_address"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp">
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="OR"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"/>



</RelativeLayout>